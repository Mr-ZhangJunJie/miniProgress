/* pages/payBill/index.wxss */
.container{
  width:100%;height:100%;position: fixed;background: #F4F4F4;
}
.header{
  height:106rpx;display: flex;background: #E53B3E;
}
.headCenter{
  flex:1;
}
.headLeft,.headRight{
  width:106rpx;height:106rpx;
}
.headLeft image{
  width:106rpx;height:106rpx;
}
.headCenter{
  height:106rpx;line-height: 106rpx;font-size: 30rpx;color:#fff;text-align: center;
}
.headCenter image{
  width:42rpx;height:42rpx;vertical-align: middle;margin-right:12rpx;
}
.headRight image{
  width:106rpx;height:106rpx;
}

.headPortrait{
 height:260rpx;background: #F4F4F4;display: flex;
}
.headPortraitImg{
  width:150rpx;height:150rpx;border-radius: 50%;overflow: hidden;margin:auto;
}
.headPortraitImgItem{
   width:150rpx;height:150rpx;
}
.price{
  width:706rpx;height:262rpx;background: #ffffff;margin:0 auto;border-radius:6rpx;
  padding:22rpx;
}
.payAmount{
  height:128rpx;background: #F7F5F6;border-radius: 4rpx;overflow: hidden;
}
.payAmountInput{
  width:380rpx;height: 80rpx;margin-top:24rpx;margin-left:50rpx;float:left;font-size:40rpx;
}
.payAmount text{
  height:128rpx;line-height: 128rpx;font-size: 24rpx;color:#737373;
}

.addDiscount{
  width:56rpx;height:56rpx;border:1px solid #A4A4A4;border-radius: 50%;text-align: center;line-height: 56rpx;float:left;margin-left:40rpx;margin-right:20rpx;margin-top:36rpx;
}
.txt{
  font: 26rpx;height:100%;line-height: 128rpx;float:left;color:#A4A4A4;
}

.payment{
 width:100%; height:120rpx;background: #ffffff;position: absolute;bottom: 0;
}
.payment .left{
  width:220rpx;height:120rpx;line-height:120rpx;color: #E64043;float:left;text-align: center;
  font-size:36rpx;
}
.payment .right{
  width:242rpx;height:120rpx;line-height:120rpx;color: #ffffff;float:right;text-align: center;
  background: #E53B3E;font-size: 36rpx;
}