/* pages/startOrder/index.wxss */
.container{
  width:100%;height:100%;position: fixed;background: #F4F4F4;display: flex;
  flex-direction: column;
}
.header{
  height:106rpx;background: #E53B3E;
}
.headerBox{
  width:100%;height:100%;display: flex;
}
.headCenter{
  flex:1;
}
.headLeft{
  width:106rpx;height:106rpx;float:left;
}
.headRight{
  width:106rpx;height:106rpx;float:right;
}
.headLeft image{
  width:106rpx;height:106rpx;
}
.headCenter{
  height:106rpx;line-height: 106rpx;font-size: 30rpx;color:#fff;text-align: center;
}
.headCenter image{
  width:42rpx;height:42rpx;vertical-align: middle;margin-right:12rpx;
}
.headRight image{
  width:106rpx;height:106rpx;
}


.subTitle{
  height:56rpx;background: #E53B3E;
}
.subTitle view{
  float:left;width:50%;height:100%;color:#ffffff;font-size: 20rpx;
}
.subTitle view:first-child{
  text-align: right;padding-right:20rpx;box-sizing: border-box;
}
.subTitle view:nth-child(2){
  padding-left:20rpx;box-sizing: border-box;
}

.orderList{
  width:750rpx;
}
.orderListLeft{
  width:234rpx;float:left;
}

.orderList{
  flex:1;width:100%;height:0;
}
.orderListLeft{
  width:234rpx;height:100%;float:left;
}
.orderListRight{
  width:516rpx;height:100%;float:right;background: #ffffff;
}

.orderListLeft view{
  width:100%;height:118rpx;text-align: center;line-height: 118rpx;
}


.goodsBox{
  width:514rpx;height:342rpx;box-sizing: border-box;padding:40rpx 22rpx 26rpx 40rpx;
  border-bottom: 1px solid #E7E7E7;
}
.shopIntroduce{
  height:150rpx;
}
.shopIcon{
  width:150rpx;height:150rpx;border-radius: 4rpx;overflow: hidden;float: left;
}
.shopIcon image{
  width: 100%;height:100%;
}
.shopMessage{
   float:left;margin-left:18rpx;
}
.shopMessage view:first-child{
  height:54rpx;line-height:54rpx;font-size:32rpx;color:#363636;
}
.shopMessage view:nth-child(2),.shopMessage view:nth-child(3){
  height: 50rpx;line-height: 50rpx;font-size:20rpx ;color:#AAAAAA;
}
.shopMessage view:nth-child(2) image{
  width:133rpx;height:22rpx;
}
.shopIntroduceTxt{
   height:126rpx;font-size:18rpx;
}

.makeOrder{
  height:40rpx;margin-top:24rpx;
}
.makeOrder .left{
  float:left;font-size:34rpx;color:#F10F0F;
}
.makeOrder .right{
  float:right;font-size:24rpx;color:#F10F0F;margin-top:10rpx;
}
.makeOrder .right text{
  display:inline-block;width:22rpx;height:22rpx;
  background: #ED4F14;color:#ffffff;font-size: 20rpx;
  line-height: 22rpx;text-align: center;
}
.makeOrder .right .num{
  background: none;color:#000;
}

.footer{
  width:100%;height:118rpx;position: absolute;bottom: 0;background: #434343;
}
.footer .left{
  width:530rpx;  height:118rpx;float:left;
  position: relative;
}
.footer .right{
  width:220rpx;  height:118rpx;float:left;background: #E53B3E;color:#fff;
  text-align: center;line-height: 118rpx;font-size: 38rpx;
}

.gwcbox{
  width: 120rpx;
  height: 120rpx;
  background: #e5383b;
  border-radius: 50%;
  position: absolute;
  left: 34rpx;
  top: -30rpx;
  line-height:120rpx;
  text-align: center;
}
.gwcbox image{
  width: 87rpx;
  height: 69rpx;
  vertical-align: middle;
}
.gwcbox .num1{
  width: 30rpx;
  height: 30rpx;
  background: #ffffff;
  border-radius: 50%;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color:#e5383b;
  position: absolute;
  right: 0;
  top: 0;
}
.xj{
  width: 300rpx;
  height: 100%;
  margin-left: 190rpx;
  color: #fff;
  line-height: 120rpx;
  font-size: 40rpx;
}
.xj text{
  font-size: 45rpx;
  color:#e5383b;
  font-weight: bold;
}