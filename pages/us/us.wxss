/* pages/us/us.wxss */
.container{
  width:100%;height:100%;position:fixed;background: #F4F4F4;
}
.title{
  height:163rpx;width:100%;background-color: #FD0100;overflow: hidden;
}
.headdPortaitBox{
  height:104rpx;margin-top:30rpx;width:100%;
}
.headPortrait{
  width:104rpx;height:104rpx;border-radius: 50%;float:left;margin-left:30rpx;overflow: hidden;
}
.nickName{
  height:104rpx;line-height: 104rpx;float:left;margin-left: 32rpx;color:#ffffff;
}
.property{
  height:120rpx;width:100%;display: flex;background: #ffffff;
}
.propertyItem{
  height: 120rpx;flex:1;
  font-size: 32rpx;text-align: center;display: flex;flex-direction: column;justify-content: center;
}
.unit{
  font-size: 20rpx;
}
.name{
  font-size: 23rpx;
}
.myMessage{
  margin-top:22rpx;width:100%;
}
.myMessageItem{
  border-bottom:1px solid #F6F6F6;padding:0 34rpx;height:88rpx;line-height: 88rpx;position: relative;background: #ffffff;
}
.myMessageItem image{
  width:42rpx;height:42rpx;margin-right:30rpx;vertical-align: middle;
}
.more{
  width:28rpx;height:34rpx;position: absolute;top:50%;right:26rpx;margin-top:-17rpx;
}
.other{
  margin-top:12rpx;
}
.business{
  margin-top:22rpx; 
}
.footer{
  height:96rpx;width:100%;background-color: #E53B3E;text-align: center;position: absolute;bottom: 0;color:#ffffff;display: flex;
}
.footCenter{
  width:150rpx;height:100%;margin:auto;
}
.home{
  width:54rpx;height:54rpx;margin-right:12rpx;margin-top:21rpx;float:left;
}
.footCenter text{
 float:left;margin-top:23rpx;
}
